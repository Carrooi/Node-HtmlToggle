{
	"name": "html-toggle",
	"description": "Simple toggling library for HTML, based on data attributes",
	"version": "1.0.0",
	"author": {
		"name": "David Kudera",
		"email": "sakren@gmail.com"
	},
	"keywords": [
		"html",
		"dom",
		"toggle"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:sakren/node-html-toggle.git"
	},
	"license": "MIT",
	"engines": {
		"node": ">=0.9"
	},
	"main": "./lib/Toggle.js",
	"devDependencies": {
		"chai": "~1.9.0",
		"mocha": "~1.17.1",
		"mocha-phantomjs": "~3.3.1",
		"phantomjs": "~1.9.7-1"
	},
	"scripts": {
		"test": "npm run test-browser",
		"build": "uglifyjs ./lib/Toggle.js -o ./lib/Toggle.min.js",
